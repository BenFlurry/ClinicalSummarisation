<Window
    x:Class="ClinicalSummarisation.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClinicalSummarisation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Clinical Summarisation and Appraisal for Intel AIPC">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid x:Name ="RecordingView" Background="Transparent" Visibility="VIsible">

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" 
                        Margin="20,20,0,0">
                <Button Width="40" Height="40" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        ToolTipService.ToolTip="Settings">

                    <SymbolIcon Symbol="Setting"/>

                    <Button.Flyout>
                        <Flyout Placement="BottomEdgeAlignedLeft">
                            <StackPanel Width="280" Spacing="16">
                                <TextBlock Text="Settings" Style="{StaticResource SubtitleTextBlockStyle}"/>

                                <StackPanel Spacing="8">
                                    <TextBlock Text="Microphone Input" FontWeight="SemiBold"/>
                                    <ComboBox SelectedIndex="0" HorizontalAlignment="Stretch" Name="MicComboBox"> 
                                    </ComboBox>
                                </StackPanel>

                                <MenuFlyoutSeparator/>

                                <StackPanel Spacing="8">
                                    <TextBlock Text="Voice Profile" FontWeight="SemiBold"/>
                                    <Button x:Name="enrollVoice_btn" Content="Enroll Voice Detection" Click="enrollVoice_Click" HorizontalAlignment="Stretch"/>
                                </StackPanel>

                                <MenuFlyoutSeparator/>

                                <StackPanel Spacing="8">
                                    <TextBlock Text="Summarisation/Appraisal Save Folder" FontWeight="SemiBold"/>
                                    <Button x:Name="changeSaveLocation_btn" Content="Change Location" Click="changeSaveLocation_Click" IsEnabled="True" />
                                </StackPanel>

                                <MenuFlyoutSeparator/>

                                <StackPanel Spacing="4">
                                    <TextBlock Text="AI Model Configuration" FontWeight="SemiBold"/>
                                    <TextBlock Text="Whisper: Quantized (Int8)" Foreground="Gray" FontSize="12"/>
                                    <TextBlock Text="Med42: 4-bit (OpenVINO)" Foreground="Gray" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top" 
                        Margin="0,20,20,0" 
                        Spacing="10">

                <Button x:Name="appraisalHistory_btn" 
                    Content="Appraisals" 
                    Click="appraisalHistory_Click" 
                    IsEnabled="True"
                    Height="40"/>
                <Button Width="40" Height="40" 
                        Background="Transparent" 
                        ToolTipService.ToolTip="Information"
                        BorderThickness="0">

                    <FontIcon Glyph="&#xE946;" FontSize="18"/>

                    <Button.Flyout>
                        <Flyout Placement="BottomEdgeAlignedRight">
                            <StackPanel MaxWidth="300" Spacing="5" >
                                <TextBlock Text="Disclaimer" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <TextBlock TextWrapping="Wrap">
                                    This application was created as part of a final year project with UCL in partnership with Intel as a proof of concept project for a clinical summarisation and medical advice application.
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap">
                                    This application is completely offline and does not store data of any kind.
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap">
                                    Powered by Intel OpenVINO and Llama3.
                                </TextBlock>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>

                <Button Width="40" Height="40" 
                        Background="Transparent" 
                        BorderThickness="0">
                    <Button.Content>
                        <FontIcon Glyph="&#xE897;" FontFamily="Segoe MDL2 Assets"/>
                    </Button.Content>

                    <Button.Flyout>
                        <Flyout Placement="BottomEdgeAlignedRight">
                            <StackPanel MaxWidth="300" Spacing="10">
                                <TextBlock Text="Device Requirements" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <TextBlock TextWrapping="Wrap">
                                    This application can be ran exclusively on an Intel AIPC with minimum 32GB RAM and up-to-date drivers installed.
                                </TextBlock>
                                <TextBlock Text="Instructions" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <TextBlock TextWrapping="Wrap">
                                    1. Click "Start Recording" to listen to your conversation.
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap">
                                    2. Click "Stop Recording" to produce a summary and advice.
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap">
                                    3. Click "Copy to Clipboard" to export the result.
                                </TextBlock>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>

            </StackPanel>

            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Spacing="20">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <TextBlock x:Name="StatusText" 
                               Text="Application loading..." 
                               Style="{StaticResource SubtitleTextBlockStyle}" 
                               TextAlignment="Center"/>
                    <ProgressRing x:Name="StatusSpinner" 
                                  IsActive="True" 
                                  Width="20" 
                                  Height="20" 
                                  Visibility="Collapsed"/>
                </StackPanel>

                <Button x:Name="initialEnrollVoice_btn" Content="Enroll voice" Click="enrollVoice_Click" IsEnabled="False" Visibility="Collapsed"/>

                <StackPanel x:Name="ControlButtons" Orientation="Horizontal" Spacing="20" Visibility="Collapsed" HorizontalAlignment="Center">
                    <Button x:Name="startRecording_btn" Content="Start Recording" Click="startRecording_Click"/>
                    <Button x:Name="stopRecording_btn" Content="Stop Recording" Click="stopRecording_Click" IsEnabled="False"/>
                </StackPanel>

                <StackPanel x:Name="EnrollmentPanel" Orientation="Vertical" Spacing="15" Visibility="Collapsed" HorizontalAlignment="Center" MaxWidth="600">
                    <TextBlock Text="Please read the following text naturally at your normal speaking pace:" 
                   FontWeight="SemiBold" HorizontalAlignment="Center"/>

                    <Border Background="{ThemeResource SystemControlBackgroundAltMediumBrush}" Padding="15" CornerRadius="8">
                        <TextBlock Text="&#x22;I am recording my voice profile for the clinical summarisation system. This will allow the application to recognize my voice and accurately separate it from the patient's voice during our consultation. I am speaking clearly and at a normal volume.&#x22;" 
                       TextWrapping="Wrap" FontStyle="Italic" TextAlignment="Center" FontSize="16"/>
                    </Border>

                    <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
                        <Button x:Name="finishEnrollment_btn" Content="Finish" Click="finishEnrollment_Click" Style="{StaticResource AccentButtonStyle}"/>
                        <Button x:Name="cancelEnrollment_btn" Content="Cancel" Click="cancelEnrollment_Click"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Spacing="10">

                    <TextBox x:Name="MyTextBox" 
                         Width="600" 
                         Height="300" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True" 
                         PlaceholderText="Summarisation will appear here..."
                         Visibility="Collapsed"/>

                    <Grid x:Name="PostSummarisationButtons" Width="600" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                            x:Name="createAppraisal_btn" 
                            Content="Create Appraisal" 
                            Click="createAppraisal_Click" 
                            Style="{StaticResource AccentButtonStyle}"
                            IsEnabled="True"/>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                            <Button x:Name="saveTranscript_btn" Click="saveTranscription_Click" ToolTipService.ToolTip="Save Transcript">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE74E;" FontSize="14"/>
                                    <TextBlock Text="Transcript" FontSize="12"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="saveSummarisation_btn" Click="saveSummarisation_Click" ToolTipService.ToolTip="Save Summary">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE74E;" FontSize="14"/>
                                    <TextBlock Text="Summary" FontSize="12"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="copy_btn" 
                                Click="copyButton_Click"
                                Visibility="Collapsed"
                                Padding="8,4,8,4"
                                MinHeight="0"
                                MinWidth="0">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <SymbolIcon Symbol="Copy" RenderTransformOrigin="0.5,0.5">
                                        <SymbolIcon.RenderTransform>
                                            <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                        </SymbolIcon.RenderTransform>
                                    </SymbolIcon>
                                    <TextBlock x:Name="CopyButtonText" Text="Copy" FontSize="12"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                </StackPanel>
            </StackPanel>

            <ContentDialog x:Name="AppraisalDialog"
                   Title="Create Appraisal"
                   MaxHeight="1000">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" Margin="0,0,-20,0" Padding="0,0,20,0" VerticalScrollBarVisibility="Auto">
                        <StackPanel Spacing="15" Width="500">
                            <TextBox x:Name="AppraisalNameBox" Header="Appraisal Name" PlaceholderText="e.g., Annual Review, Post-Op Check..."/>
                            <TextBox x:Name="AppraisalSummaryBox" Header="Summarisation" AcceptsReturn="True" Height="150" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                            <TextBox x:Name="AppraisalTagsBox" Header="Tags" PlaceholderText="e.g., follow-up, urgent, asthma..."/>
                            <TextBox x:Name="AppraisalNotesBox" Header="Appraisal Notes" AcceptsReturn="True" Height="100" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </ScrollViewer>

                    <Grid Grid.Row="1" 
                  Background="{ThemeResource LayerFillColorAltBrush}" 
                  Margin="-24,20,-24,-24" 
                  Padding="24,12,24,12">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                        Content="Save" 
                        HorizontalAlignment="Stretch" 
                        Style="{StaticResource AccentButtonStyle}" 
                        Click="appraisalDialog_SaveClick"/>

                        <Button Grid.Column="2" 
                        Content="Cancel" 
                        HorizontalAlignment="Stretch" 
                        Click="appraisalDialog_CancelClick"/>
                    </Grid>
                </Grid>
            </ContentDialog>
        </Grid>

        <Grid x:Name="AppraisalsView" Visibility="Collapsed" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Spacing="10" Padding="30,20,30,10">
                <RelativePanel>
                    <TextBlock Text="Appraisal History" Style="{StaticResource TitleTextBlockStyle}" RelativePanel.AlignLeftWithPanel="True"/>
                    <Button Content="Back to Recording" Click="CloseAppraisals_Click" RelativePanel.AlignRightWithPanel="True"/>
                </RelativePanel>

                <Grid ColumnDefinitions="*, Auto" Margin="0,10,0,0">
                    <TextBox x:Name="NameSearchBox" PlaceholderText="Search by Appraisal Name" 
                                 TextChanged="RenderAppraisalsList" Margin="0,0,10,0"/>

                    <Button Grid.Column="1" Content="Filter by Tags">
                        <Button.Flyout>
                            <Flyout>
                                <StackPanel Width="250" Spacing="10">
                                    <TextBox x:Name="TagSearchBox" PlaceholderText="Find a tag..." TextChanged="FilterSearchBox_TextChanged"/>
                                    <MenuFlyoutSeparator/>
                                    <ScrollViewer MaxHeight="300">
                                        <ItemsControl x:Name="TagFilterListView"/>
                                    </ScrollViewer>
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </Grid>
            </StackPanel>

            <GridView Grid.Row="1" 
              x:Name="AppraisalsListContainer" 
              Padding="30,0,30,30" 
              SelectionMode="None" 
              HorizontalAlignment="Center"
              IsItemClickEnabled="False">
            </GridView>
        </Grid>

        <ContentDialog x:Name="HistoryDialog"
               Title="Edit Appraisal"
               MaxHeight="1000">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" Margin="0,0,-20,0" Padding="0,0,20,0" VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="15" Width="500">
                        <TextBox x:Name="HistoryNameBox" Header="Appraisal Name" PlaceholderText="e.g., Annual Review, Post-Op Check..."/>
                        <TextBox x:Name="HistorySummaryBox" Header="Summarisation" AcceptsReturn="True" Height="150" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                        <TextBox x:Name="HistoryTagsBox" Header="Tags" PlaceholderText="e.g., follow-up, urgent, asthma..."/>
                        <TextBox x:Name="HistoryNotesBox" Header="Appraisal Notes" AcceptsReturn="True" Height="100" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </ScrollViewer>

                <Grid Grid.Row="1" 
              Background="{ThemeResource LayerFillColorAltBrush}" 
              Margin="-24,20,-24,-24" 
              Padding="24,12,24,12">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                    Content="Save" 
                    HorizontalAlignment="Stretch" 
                    Style="{StaticResource AccentButtonStyle}" 
                    Click="HistoryDialog_SaveClick"/>

                    <Button Grid.Column="2" 
                    Content="Exit" 
                    HorizontalAlignment="Stretch" 
                    Click="HistoryDialog_CancelClick"/>
                </Grid>
            </Grid>
        </ContentDialog>
    </Grid>
</Window>